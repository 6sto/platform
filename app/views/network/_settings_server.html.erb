<table>
<% if false # for prototyping only %>
<%
	net = Setting.general.find_by_name('net')
	gw = Setting.general.find_by_name('gateway')
%>
	<tr><td>&nbsp;</td></tr>
	<tr>
	<td><%=t 'router_ip' %>: </td>
	<td> <%= editable_content(
			  :content => {
			  :element => 'span',
			  :text => net.value,
			  :options => {
			    :id => "net_id",
			    :class => 'editable'
			  }
			 },
			:url => { :controller => 'network', :action => 'change_net', :id => net }
		) %> . 
	<%= editable_content(
			  :content => {
			  :element => 'span',
			  :text => gw.value,
			  :options => {
			    :id => "hda_id_id",
			    :class => 'editable'
			  }
			 },
			:url => { :controller => 'network', :action => 'change_gateway', :id => gw }
		) %>
	</td>
	</tr>
<% end %>
	<tr><td>&nbsp;</td></tr>
	<tr>
	<td><%=t 'dhcp_lease' %>: </td>
	<td> <%= editable_content(
			  :content => {
			  :element => 'span',
			  :text => Setting.get('dhcp_lease_time'),
			  :options => {
			    :id => "dhcp_lease_time_id",
			    :class => 'editable'
			  }
			 },
			:url => { :controller => 'network', :action => 'change_dhcp_lease_time', :id => Setting.network.find_by_name('dhcp_lease_time') }
		) %> <%=t 'seconds' %>
	</td>
	</tr>
</table>
